# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN - RAILWAY
# ===========================================
# Copia este archivo y configúralo en Railway Dashboard

# --- APLICACIÓN ---
APP_NAME="Sistema Horarios FICCT"
APP_ENV=production
APP_KEY=base64:GENERA_UNA_NUEVA_KEY_CON_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://tu-app.up.railway.app

# --- LOCALIZACIÓN ---
APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_BO

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# --- LOGGING ---
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error  # Solo errores en producción

# --- BASE DE DATOS ---
# Railway genera estas variables automáticamente:
# DATABASE_URL=postgresql://user:password@host:port/dbname
# O manualmente:
DB_CONNECTION=pgsql
DB_HOST=${PGHOST}
DB_PORT=${PGPORT}
DB_DATABASE=${PGDATABASE}
DB_USERNAME=${PGUSER}
DB_PASSWORD=${PGPASSWORD}

# --- SESIONES Y CACHE ---
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

# --- REDIS (Opcional - Railway tiene add-on) ---
REDIS_CLIENT=phpredis
REDIS_HOST=${REDIS_HOST}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_PORT=${REDIS_PORT}

# --- EMAIL (Configura según tu proveedor) ---
# Opciones: smtp, mailgun, postmark, sendgrid, ses
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@ficct.edu.bo"
MAIL_FROM_NAME="${APP_NAME}"

# --- AWS (Si usas S3 para archivos) ---
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# --- VITE ---
VITE_APP_NAME="${APP_NAME}"

# --- SEGURIDAD ---
# Genera con: openssl rand -base64 32
APP_KEY=
