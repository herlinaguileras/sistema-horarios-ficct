                        {{-- JavaScript para manejar los checkboxes --}}
                        <script>
                            function toggleModulePermissions(moduleId, checked) {
                                const checkboxes = document.querySelectorAll('.permission-' + moduleId);
                                checkboxes.forEach(checkbox => {
                                    checkbox.checked = checked;
                                });
                            }

                            function updateModuleCheckbox(moduleId) {
                                const checkboxes = document.querySelectorAll('.permission-' + moduleId);
                                const moduleCheckbox = document.querySelector('[data-module="' + moduleId + '"]');

                                const allChecked = Array.from(checkboxes).every(cb => cb.checked);
                                const someChecked = Array.from(checkboxes).some(cb => cb.checked);

                                moduleCheckbox.checked = allChecked;
                                moduleCheckbox.indeterminate = !allChecked && someChecked;
                            }

                            // Inicializar estados al cargar la pÃ¡gina
                            document.addEventListener('DOMContentLoaded', function() {
                                document.querySelectorAll('.module-checkbox').forEach(moduleCheckbox => {
                                    const moduleId = moduleCheckbox.getAttribute('data-module');
                                    updateModuleCheckbox(moduleId);
                                });
                            });
                        </script>

